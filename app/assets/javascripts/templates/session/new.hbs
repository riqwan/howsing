{{#if errorMessage}}
  <div class="alert alert-danger">{{errorMessage}}</div>
{{/if}}

<form {{action 'login' on="submit"}}>
  <div class="form-group">
    {{view Ember.TextField value=username placeholder="Login or Email" class="form-control"}}
  </div>
  <div class="form-group">
    {{view Ember.TextField value=password type="password" placeholder="Password" class="form-control"}}
  </div>
  <button type="submit" class="btn btn-success">Login</button>
</form>